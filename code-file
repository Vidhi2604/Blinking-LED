// C++ code
//
//define pin 13 as LED
#define LED 13

void setup()
{
  pinMode(LED, OUTPUT);   //Assign pin 13 to the output
}

void loop()
{
  digitalWrite(LED, HIGH);  //assign HIGH output to LED
  delay(1000); // Wait for 1000 millisecond(s)
  digitalWrite(LED, LOW);  ////assign LOW output to LED
  delay(1000); // Wait for 1000 millisecond(s)
}
